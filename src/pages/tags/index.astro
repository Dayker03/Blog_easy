---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allPost = await Astro.glob('../posts/*.md')
const tags = [...new Set(allPost.map((post) => post.frontmatter.tags).flat())];
const pageTitle = "Indice de etiquetas";
---

<BaseLayout pageTitle={pageTitle}>
    <div class="tags">
        {tags.map((tag) => (<p class="tag"> <a href={`/tag/${tag}`}>{tag}</p></a>))}</div>
</BaseLayout>

<style>
    a {
        color #00539F;
    }

    .tags {
        display: flex;
        filex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;
    }
</style>